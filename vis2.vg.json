{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/abhimalik-uni/homework9/main/data/top3.csv",
      "format": {
        "type": "csv"
      }
    },
    "width": 1150,
    "height": 700,
    "title": {
      "text": "Population Growth of the Three Largest Countries (1970-2021)",
      "fontSize": 24
    },
    "layer": [
      {
        "mark": "line",
        "encoding": {
          "x": {
            "field": "year",
            "type": "ordinal",
            "title": "Year",
            "axis": {
              "labelAngle": 0,
              "labelFontSize": 14,
              "titleFontSize": 18
            }
          },
          "y": {
            "field": "population",
            "title": "Population (in thousands)",
            "type": "quantitative",
            "scale": {"domain": [0, 1600000]},
            "axis": {
              "labelFontSize": 14,
              "titleFontSize": 18
            }
          },
          "color": {
            "field": "Country",
            "type": "nominal",
            "legend": {
              "title": "Country",
              "orient": "right",
              "titleFontSize": 18,
              "labelFontSize": 16,
              "symbolSize": 150,
              "offset": 10,
              "labelLimit": 200,
              "clipHeight": 30
            }
          },
          "tooltip": [
            {
              "field": "year",
              "type": "ordinal",
              "title": "Year"
            },
            {
              "field": "population",
              "type": "quantitative",
              "title": "Population (in thousands)",
              "format": ",.0f"
            },
            {
              "field": "Country",
              "type": "nominal",
              "title": "Country"
            }
          ]
        },
        "selection": {
          "countrySelection": {
            "type": "single",
            "fields": ["Country"],
            "bind": {
              "input": "select",
              "options": [null, "China", "India", "United States of America"],
              "labels": ["Show All", "China", "India", "United States of America"],
              "name": "Select a country"
            }
          }
        },
        "transform": [
          {
            "filter": {"selection": "countrySelection"}
          }
        ]
      },
      {
        "layer": [
          {
            "mark": "rule",
            "encoding": {
              "x": {
                "datum": "1980",
                "type": "ordinal"
              },
              "y": {
                "datum": 1050000
              },
              "y2": {
                "datum": 1200000
              }
            }
          },
          {
            "mark": {
              "type": "text",
              "align": "left",
              "baseline": "middle",
              "dx": -500,
              "dy": -195,
              "font": "sans-serif",
              "fontSize": 16,
              "fill": "black"
            },
            "encoding": {
              "text": {"value": "China surpasses 1 billion in 1980"}
            }
          },
          {
            "mark": {
              "type": "rule",
              "color": "black"
            },
            "encoding": {
              "y": {"datum": 1050000},
              "y2": {"datum": 1200000},
              "x": {"datum": "1980"}
            }
          }
        ]
      },
      {
        "layer": [
          {
            "mark": "rule",
            "encoding": {
              "x": {
                "datum": "1991",
                "type": "ordinal"
              },
              "y": {
                "datum": 850000
              },
              "y2": {
                "datum": 950000
              }
            }
          },
          {
            "mark": {
              "type": "text",
              "align": "left",
              "baseline": "middle",
              "dx": -250,
              "dy": -5,
              "font": "sans-serif",
              "fontSize": 16,
              "fill": "black"
            },
            "encoding": {
              "text": {"value": "India's population boom driven by high birth rates and improved healthcare in the 1990s"}
            }
          },
          {
            "mark": {
              "type": "rule",
              "color": "black"
            },
            "encoding": {
              "y": {"datum": 850000},
              "y2": {"datum": 950000},
              "x": {"datum": "1991"}
            }
          }
        ]
      },
      {
        "layer": [
          {
            "mark": "rule",
            "encoding": {
              "x": {
                "datum": "2000",
                "type": "ordinal"
              },
              "y": {
                "datum": 280000
              },
              "y2": {
                "datum": 320000
              }
            }
          },
          {
            "mark": {
              "type": "text",
              "align": "left",
              "baseline": "middle",
              "dx": -300,
              "dy": 190,
              "font": "sans-serif",
              "fontSize": 16,
              "fill": "black"
            },
            "encoding": {
              "text": {"value": "Steady population growth in the U.S., driven by immigration and economic stability"}
            }
          },
          {
            "mark": {
              "type": "rule",
              "color": "black"
            },
            "encoding": {
              "y": {"datum": 280000},
              "y2": {"datum": 320000},
              "x": {"datum": "2000"}
            }
          }
        ]
      }
    ]
  }
  